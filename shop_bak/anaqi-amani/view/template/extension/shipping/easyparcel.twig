{{header}}{{column_left}}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-easyparcel" data-toggle="tooltip" title="{{button_save}}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{cancel}}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{heading_title}}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{error_warning}}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{text_edit}}</h3>
			</div>
			<div class="panel-body">
				{% if error_invalid %}
					<div class="text-danger" align="center"><h4>{{error_invalid}}</h4></div>
				{% endif %}
				<form action="{{action}}" method="post" enctype="multipart/form-data" id="form-easyparcel" class="form-horizontal">
					<!--Email Start-->
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-email">{{entry_email}}</label>
						<div class="col-sm-10">
							<input type="text" name="shipping_easyparcel_email" value="{{shipping_easyparcel_email}}" placeholder="{{entry_email}}" id="input-email" class="form-control" />
							{% if error_email %}
							<div class="text-danger">{{error_email}}</div>
							{% endif %}
						</div> 
					</div> 
					<!--Email End-->
					<!--Integration Key Start-->
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-integration">{{entry_integration}}</label>
						<div class="col-sm-10">
							<input type="text" name="shipping_easyparcel_integration" value="{{shipping_easyparcel_integration}}" placeholder="{{entry_integration}}" id="input-integration" class="form-control" />
							{% if error_integration %}
							<div class="text-danger">{{error_integration}}</div>
							{% endif %}
						</div> 
					</div>
					<!--Integration Key End-->
					<!--Address Start-->
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-address">{{entry_address}}</label>
						<div class="col-sm-10">
							<input type="text" name="shipping_easyparcel_address" value="{{shipping_easyparcel_address}}" placeholder="{{entry_address}}" id="input-address" class="form-control" />
							{% if error_address %}
							<div class="text-danger">{{error_address}}</div>
							{% endif %}
						</div> 
					</div>
					<!--Address End-->
					<!--Postcode Start-->
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-postcode">{{entry_postcode}}</label>
						<div class="col-sm-10">
							<input type="text" name="shipping_easyparcel_postcode" value="{{shipping_easyparcel_postcode}}" placeholder="{{entry_postcode}}" id="input-postcode" class="form-control" />
							{% if error_postcode %}
							<div class="text-danger">{{error_postcode}}</div>
							{% endif %}
						</div> 
					</div>
					<!--Postcode End-->
					<!--State Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-state">{{entry_state}}</label>
						<div class="col-sm-10">
							<select name="shipping_easyparcel_state" id="input-weight-class" class="form-control">
							{% for state_list in state_list %}
								{% if state_list.code == shipping_easyparcel_state %}
								<option value="{{state_list.code}}" selected="selected">{{state_list.name}}</option>
								{% else %}
								<option value="{{state_list.code}}">{{state_list.name}}</option>
								{% endif %}
							{% endfor %}
							</select>
						</div>
					</div>
					<!--State End-->
					<!--Country Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-country">{{entry_country}}</label>
						<div class="col-sm-10">
							<input type="text" name="shipping_easyparcel_country" readonly value="Malaysia" echo={{shipping_easyparcel_country}} placeholder="{{entry_country}}" id="input-country" class="form-control" />
							{% if error_country %}
							<div class="text-danger">{{error_country}}</div>
							{% endif %}
						</div> 
						<!--<div class="col-sm-10">-->
						<!--	<select name="shipping_easyparcel_country" id="input-weight-class" class="form-control">-->
						<!--	<?php //foreach ($country_list as $country_list) { ?>-->
						<!--	<?php //if ($country_list['country_id'] == $shipping_easyparcel_country) { ?>-->
						<!--	<option value="<?php //echo $country_list['country_id']; ?>" selected="selected"><?php //echo $country_list['name']; ?></option>-->
						<!--	<?php //} else { ?>-->
						<!--	<option value="<?php //echo $country_list['country_id']; ?>"><?php //echo $country_list['name']; ?></option>-->
						<!--	<?php //} ?>-->
						<!--	<?php //} ?>-->
						<!--	</select>-->
						<!--</div>-->
					</div>
					<!--Country End-->
					<!--Display Rate Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{help_display_rate}}">{{entry_display_rate}}</span></label>
						<div class="col-sm-10">
							<label class="radio-inline">
								<input type="radio" name="shipping_easyparcel_show_rate_type" value="0" {{shipping_easyparcel_show_rate_type==0?"checked"}} /> {{text_no_rate_d}}
							</label>
							<label class="radio-inline">
								<input type="radio" name="shipping_easyparcel_show_rate_type" value="1" {{shipping_easyparcel_show_rate_type==1?"checked"}} /> {{text_account_rate_d}}
							</label>
							<label class="radio-inline">
								<input type="radio" name="shipping_easyparcel_show_rate_type" value="2" {{shipping_easyparcel_show_rate_type==2?"checked"}} /> {{text_public_rate_d}}
							</label>
						</div>
					</div>
					<!--Display Rate End-->
					 <!--Display Rate Option Start-->
					 <div class="form-group">
					  <tr>
						<td>
							<label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{help_display_rate_option}}">{{entry_display_rate_option}}</span></label>
						</td>
						<td>
							<table>
							<tr>
							<td></td>
							<td>
							
							{% set Increase_selected, Decrease_selected, None_selected = '', '', '' %}
							{% if shipping_easyparcel_rate_adjustment_type == 0 %}
								{% set None_selected = 'checked="checked"' %}
							{% endif %}
							{% if shipping_easyparcel_rate_adjustment_type == 1 %}
								{% set Increase_selected = 'checked="checked"' %}
							{% endif %}
							{% if shipping_easyparcel_rate_adjustment_type == 2 %}
								{% set Decrease_selected = 'checked="checked"' %}
							{% endif %}

							<!-- -->
							<label class="radio-inline">
							<input type="radio" name="shipping_easyparcel_rate_adjustment_type" value="0" {{None_selected}} onClick="$('#rate_column').hide();"/>
							{{text_rate_none}}
							</label>
							
							<label class="radio-inline">
							<input type="radio" name="shipping_easyparcel_rate_adjustment_type" value="1" {{Increase_selected}} onClick="$('#rate_column').show();"/>
							{{text_rate_increase}}
							</label>
							
							<label class="radio-inline">
							<input type="radio" name="shipping_easyparcel_rate_adjustment_type" value="2" {{Decrease_selected}} onClick="$('#rate_column').show();"/>
							{{text_rate_decrease}}
							</label>
							<!-- -->
							<td>
							</tr>
							<tr>
							<td></td>
							<td id="rate_column">
							<label>{{help_display_rate_comment}}</label><input type="text" name="shipping_easyparcel_rate_adjustment_amount" value="{{ shipping_easyparcel_rate_adjustment_amount != '' ? shipping_easyparcel_rate_adjustment_amount : '0.00' }}" id="input-rate_value" placeholder="0.00" class="form-control" onchange="(function(el){if(el.value != ''){el.value=parseFloat(el.value).toFixed(2);}})(this)" />
										{% if error_rate_value %}
										<div class="text-danger">{{error_rate_value}}</div>
										{% endif %}
							</td>
							</tr>
							</table>
							{% if shipping_easyparcel_rate_adjustment_type == 0%}
								<script>
								$('#rate_column').hide();
								</script>
							{% endif %}
						</td>
					  </tr>
					  </div>
					  <!--Display Rate Option End-->
					<!--Display Weight Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{help_display_weight}}">{{entry_display_weight}}</span></label>
						<div class="col-sm-10">
							<label class="radio-inline">
							{% if shipping_easyparcel_display_weight %}
							<input type="radio" name="shipping_easyparcel_display_weight" value="1" checked="checked" />
							{{text_yes}}
							{% else %}
							<input type="radio" name="shipping_easyparcel_display_weight" value="1" />
							{{text_yes}}
							{% endif %}
							</label>
							<label class="radio-inline">
							{% if shipping_easyparcel_display_weight == false %}
							<input type="radio" name="shipping_easyparcel_display_weight" value="0" checked="checked" />
							{{text_no}}
							{% else %}
							<input type="radio" name="shipping_easyparcel_display_weight" value="0" />
							{{text_no}}
							{% endif %}
							</label>
						</div>
					</div>
					<!--Display Weight End-->
					<!--Weight Unit Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-weight-class"><span data-toggle="tooltip" title="{{help_weight_class}}">{{entry_weight_class}}</span></label>
						<div class="col-sm-10">
							<select name="shipping_easyparcel_weight_class_id" id="input-weight-class" class="form-control">
							{% for weight_class in weight_classes %}
							{% if weight_class.weight_class_id == shipping_easyparcel_weight_class_id %}
							<option value="{{weight_class.weight_class_id}}" selected="selected">{{weight_class.title}}</option>
							{% else %}
							<option value="{{weight_class.weight_class_id}}">{{weight_class.title}}</option>
							{% endif %}
							{% endfor %}
							</select>
						</div>
					</div>
					<!--Weight Unit End-->
					<!--Tax Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-tax-class">{{entry_tax_class}}</label>
						<div class="col-sm-10">
						  <select name="shipping_easyparcel_tax_class_id" id="input-tax-class" class="form-control">
							<option value="0">{{text_none}}</option>
							{% for tax_class in tax_classes %}
							{% if tax_class.tax_class_id == shipping_easyparcel_tax_class_id %}
							<option value="{{tax_class.tax_class_id}}" selected="selected">{{tax_class.title}}</option>
							{% else %}
							<option value="{{tax_class.tax_class_id}}">{{tax_class.title}}</option>
							{% endif %}
							{% endfor %}
						  </select>
						</div>
					</div>
					<!--Tax End-->
					<!--Geo Zone Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-geo-zone">{{entry_geo_zone}}</label>
						<div class="col-sm-10">
						  <select name="shipping_easyparcel_geo_zone_id" id="input-geo-zone" class="form-control">
							<option value="0">{{text_all_zones}}</option>
							{% for geo_zone in geo_zones %}
							{% if geo_zone.geo_zone_id == shipping_easyparcel_geo_zone_id %}
							<option value="{{geo_zone.geo_zone_id}}" selected="selected">{{geo_zone.name}}</option>
							{% else %}
							<option value="{{geo_zone.geo_zone_id}}">{{geo_zone.name}}</option>
							{% endif %}
							{% endfor %}
						  </select>
						</div>
					</div>
					<!--Geo Zone  End-->
					<!--Status Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{entry_status}}</label>
						<div class="col-sm-10">
							<select name="shipping_easyparcel_status" id="input-status" class="form-control">
							{% if shipping_easyparcel_status %}
							<option value="1" selected="selected">{{text_enabled}}</option>
							<option value="0">{{text_disabled}}</option>
							{% else %}
							<option value="1">{{text_enabled}}</option>
							<option value="0" selected="selected">{{text_disabled}}</option>
							{% endif %}
							</select>
						</div>
					</div>
					<!--Status End-->
					<!--Sort Order Start-->
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-sort-order">{{entry_sort_order}}</label>
						<div class="col-sm-10">
							<input type="text" name="shipping_easyparcel_sort_order" value="{{shipping_easyparcel_sort_order}}" placeholder="{{entry_sort_order}}" id="input-sort-order" class="form-control" />
						</div>
					</div>
					<!--Sort Order End-->
				</form>
			</div>
		</div>
	</div>
</div>
{{footer}}