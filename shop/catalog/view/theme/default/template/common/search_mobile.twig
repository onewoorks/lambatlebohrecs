<div id="search" class="input-group" style="width:200px">
  <input type="text" name="search_mobile" value="{{ search }}" placeholder="{{ text_search }}" class="form-control " />
  <span class="input-group-btn">
    <button type="button" class="btn btn-default btn-lg"><i class="fa fa-search"></i></button>
  </span>
</div>

<script type="text/javascript">
  $('#search input[name=\'search_mobile\']').parent().find('button').on('click', function() {
    var url = $('base').attr('href') + 'index.php?route=product/search';
    var value = $('input[name=\'search_mobile\']').val();		
    if (value) {
      url += '&search=' + encodeURIComponent(value);
    }
    location = url;
  });

  $('input[name=\'search_mobile\']').on('keydown', function(e) {
    if (e.keyCode == 13) {
      $('input[name=\'search_mobile\']').parent().find('button').trigger('click');
    }
  });
</script>